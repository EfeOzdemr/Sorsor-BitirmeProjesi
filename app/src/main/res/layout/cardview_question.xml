<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardMaxElevation="3dp"
    android:id="@+id/cv"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
          >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/askerPhoto"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/askerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/askerPhoto"
                android:text="TempAd"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/timeAgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/askerName"
                android:layout_below="@id/askerName"
                android:text="4 hours ago"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/secondary_text_light_nodisable" />
            <ImageView
                android:id="@+id/questionPhoto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/timeAgo"
                android:layout_marginTop="8dp"
                android:background="#80ffffff"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/questionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/questionPhoto"
                android:layout_marginTop="8dp"
                android:text="QUESTION TITLE IS TOO LONG TO FIT IN A LINE"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#3949ab" />

            <TextView
                android:id="@+id/questionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/questionTitle"
                android:layout_marginTop="16dp"
                android:text="SOME TEXT ABOUT QUESTION GOES HERE"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/secondary_text_light_nodisable" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/questionDescription"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="16dp"
                android:background="#7dbcaaa4" />

            <TextView
                android:id="@+id/questionLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_marginTop="12dp"
                android:text="132"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/questionLikeTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/questionLikeCount"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/questionLikeCount"
                android:text="@string/likes"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/secondary_text_light_nodisable" />

            <TextView
                android:id="@+id/questionAnswerCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/questionLikeTXT"
                android:text="143"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/questionAnswerTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/questionLikeCount"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/questionAnswerCount"
                android:text="@string/responses"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/secondary_text_light_nodisable" />

        </RelativeLayout>


</android.support.v7.widget.CardView>